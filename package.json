{
  "name": "express-lab-coffee",
  "version": "0.1.0",
  "description": "A lab for learning how to create a JSON API with Express in Coffeescript. Based on Anders lab in Javascript.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "watch": "nodemon server.js",
    "debug": "node --debug-brk server.js",
    "test": "mocha --compilers coffee:coffee-script/register --colors test/**",
    "test-debug": "mocha --compilers coffee:coffee-script/register --colors test/** --debug-brk",
    "test-watch": "mocha --compilers coffee:coffee-script/register --colors test/** --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kobmic/express-lab-coffee.git"
  },
  "keywords": [
    "Lab",
    "Express"
  ],
  "author": "Michael Kober <michael.kober@jayway.com>, Anders Janmyr <anders@janmyr.com> (http://anders.janmyr.com/)",
  "license": "ISC",
  "homepage": "https://github.com/kobmic/express-lab-coffee",
  "jshintConfig": {
    "curly": false,
    "indent": 4,
    "trailing": true,
    "maxparams": 4,
    "maxdepth": 2,
    "maxcomplexity": 6,
    "node": true,
    "globals": {
      "describe": true,
      "before": true,
      "it": true
    }
  },
  "dependencies": {
    "debug": "^1.0.4",
    "express": "^4.8.5",
    "morgan": "^1.3.0",
     "coffee-script": "1.8.0"
  },
  "devDependencies": {
    "chai": "^1.9.1",
    "mocha": "^1.21.4",
    "nodemon": "^1.2.1",
    "sinon": "^1.10.3",
    "supertest": "^0.13.0"
  }
}
